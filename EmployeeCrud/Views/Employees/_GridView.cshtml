@model IEnumerable<EmployeeCrud.Models.Employee>

<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <i class="fas fa-edit"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </i>|
                @Html.ActionLink("Detail", "Details", new { id = item.Id }) |
            <i class="glyphicon-trash"> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</i>
            </td>
        </tr>
    }

</table>